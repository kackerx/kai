{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Kai Web Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "web",
                "-c", "./configs/config.toml",
                "-m", "./configs/model.conf",
                "--menu", "./configs/menu.yaml"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "showLog": false,
            "trace": "verbose"
        },
        {
            "name": "Debug Kai Web Server (No Menu)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "web",
                "-c", "./configs/config.toml",
                "-m", "./configs/model.conf"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug Kai Web Server (Custom Config)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "web",
                "-c", "${input:configFile}",
                "-m", "${input:modelFile}",
                "--menu", "${input:menuFile}"
            ],
            "env": {},
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {},
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Debug Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {},
            "args": [
                "-test.v"
            ],
            "showLog": true
        }
    ],
    "inputs": [
        {
            "id": "configFile",
            "description": "Config file path",
            "default": "./configs/config.toml",
            "type": "promptString"
        },
        {
            "id": "modelFile",
            "description": "Model file path",
            "default": "./configs/model.conf",
            "type": "promptString"
        },
        {
            "id": "menuFile",
            "description": "Menu file path",
            "default": "./configs/menu.yaml",
            "type": "promptString"
        }
    ]
}
